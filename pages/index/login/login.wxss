/**index.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.title {
  font-size: 32rpx;
  margin-bottom: 40rpx;
}

.input-field {
  width: 80%;
  padding: 18rpx;
  border: 1px solid #4285F4;
  border-radius: 8rpx;
  margin-bottom: 25rpx;
  font-size: 28rpx;
  color: #333;
}

.username-field::placeholder {
  color: #888;
}

.password-field::placeholder {
  color: #888;
}

.login-button {
  width: 80%;
  padding: 18rpx;
  background-color: #4285F4;
  color: white;
  border: none;
  border-radius: 8rpx;
  font-size: 30rpx;
  margin-top: 30rpx;
}



.register-button {
  width: 80%;
  padding: 18rpx;
  border: 1px solid #4285F4;
  color: #4285F4;
  border-radius: 8rpx;
  font-size: 30rpx;
  margin-top: 20rpx;
}



.avatar-wrapper {
  position: relative;
}

.avatar {
  width: 100px;
  height: 100px;
  border-radius: 8px;
}

.weui-input {
  width: 300px;
  height: 40px;
  border: 1px solid #ccc;
}
